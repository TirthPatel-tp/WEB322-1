<div class="row">
  <div class="col-md-12">
    <br>
    <h2>Employees</h2>
    <hr />
    {{#if employees}}
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Employee Num</th>
              <th>Full Name</th>
              <th>Email</th>
              <th>Address</th>
              <th>Status</th>
              <th>Course ID</th>
            </tr>
          </thead>
          <tbody>
            {{#each employees}}
              <tr>
                <td>{{employeeNum}}</td>
                <td>{{fullName}}</td>
                <td><a href="mailto:{{email}}">{{email}}</a></td>
                <td>{{address}}</td>
                <td>{{status}}</td>
                <td>{{courseID}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
    {{/if}}
  </div>
</div>
